<Page x:Class="Shedule.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Shedule"
      mc:Ignorable="d" 
      Title="MainPage"
      Style="{StaticResource MenuPageStyle}" Loaded="Page_Loaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>

        <ListBox Grid.Column="0" Background="Transparent" SelectionMode="Single" ItemsSource="{Binding}"
                 x:Name="MenuListBox" SelectionChanged="MenuListBox_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Label FontSize="14" Content="{Binding Name}"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Frame Grid.Column="1" x:Name="MenuFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>
